extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Log In
        form(method='POST' action='/login')
          div.form-group
            input.form-control(type='text' id='email' placeholder='Email' name='email' maxlength='128')
          div.form-group
            input.form-control(type='password' id='password' placeholder='Password' name='password')
          button.btn.btn-primary(type='submit') Log in
          h4(style="color: red;") #{status}