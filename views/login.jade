extends layout

block content
  .main.container
    .row.justify-content-center
      .col-md-6.col-md-offset-3
        img(src='/images/retroctf-logo.png' alt='Retro CTF')
        h1.display-4.m-b-2 Sign In
        span Don't have an account? 
          a(href='/signup') Sign Up
        form(method='POST' action='/login')
          div.form-group
            input.form-control(type='text' id='email' placeholder='Email' name='email' maxlength='128')
          div.form-group
            input.form-control(type='password' id='password' placeholder='Password' name='password')
          p.text-danger #{status}
          button.btn.btn-primary(type='submit') Log in
