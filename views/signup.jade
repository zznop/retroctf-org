extends layout

block content
  .main.container
    .row.justify-content-center
      .col-md-6.col-md-offset-3
        img(src='/images/retroctf-logo.png' alt='Retro CTF')
        h1.display-4.m-b-2 Sign up
        span Already have an account? 
          a(href='/login') Sign In
        form(method='POST' action='/signup')
          div.form-group
            input.form-control(type='text' id='email' placeholder='Username' name='username' maxlength='64')
          div.form-group
            input.form-control(type='text' id='email' placeholder='Email' name='email' maxlength='128')
          div.form-group
            input.form-control(type='password' id='password' placeholder='Password' name='password')
          div.form-group
            input.form-control(type='password' id='confirmpassword' placeholder='Confirm' name='confirmpassword')
          p.text-danger #{status}
          button.btn.btn-primary(type='submit') Sign Up
